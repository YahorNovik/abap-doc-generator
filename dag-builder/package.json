{
  "name": "abap-dag-builder",
  "version": "1.0.0",
  "description": "ABAP dependency DAG builder using abaplint parser",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "node scripts/generate-fonts.js",
    "build": "tsc && npm run bundle",
    "bundle": "esbuild dist/index.js --bundle --platform=node --target=node20 --outfile=bundle/dag-builder.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@abaplint/core": "^2.115.0",
    "abap-adt-api": "^6.0.0",
    "docx": "^9.5.2",
    "marked": "^17.0.2",
    "pdfmake": "^0.3.4"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pdfmake": "^0.3.1",
    "esbuild": "^0.27.3",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}
